<div class="container">
  <div class="row justify-content-center mt-3">
    <div class="col-12 col-sm-10 col-md-8 col-lg-8">
      <h1>My Results</h1>
      <% @results.each do |result| %>
        <div class="post-card m-3">
          <%= link_to image_result_path(result) do %>
            <%= cl_image_tag result.photo.key, class: "w-100 post-img" %>
            <%= link_to "Delete", image_result_path(result), data: { turbo_method: :delete, turbo_confirm: "Delete post?" }, class: "button mt-2" %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
