<div class="container w-75">
  <%= link_to "New Post", new_post_path if policy(Post).new? %>
  <h1>What's the issue?</h1>
  <div class="input-group mb-3 w-75">
    <div class="input-group-prepend ">
      <span class="input-group-text" id="inputGroup-sizing-default"><i class="fa-thin fa-magnifying-glass"></i></span>
    </div>
    <input type="text" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default">
  </div>
  <% @posts.each do |post| %>
    <div class="post-card w-75 border border-0">
      <div class="post-card-body border-bottom ">
        <p><img class="avatar" alt="avatar" src="https://kitt.lewagon.com/placeholder/users/cveneziani" /> <%= post.user.user_name %></p>
        <p class="card-subtitle mb-2 text-body-secondary"><%= post.title %></p>
        <p class="card-text"> <%= post.content %> <%#= cl_image_tag(post.photo.key) %></p>
      </div>
    </div>
  <% end %>
</div>
