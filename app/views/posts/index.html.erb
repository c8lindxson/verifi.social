<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-sm-10 col-md-8 col-lg-8">
      <h2 class="mt-3">What's the issue?</h2>
      <div class="my-3">
        <%= form_with url: posts_path, method: :get, class: "d-flex" do %>
          <%= text_field_tag :query,
      params[:query],
      class: "form-control white-input",
      style: "width: 600px;",
      placeholder: "Type a keyword"
      %>
          <%= submit_tag "Search", name: "", class: "btn btn-primary custom-button" %>
        <% end %>
      </div>
      <h2 class="mb-3">Catergories</h2>
      <div class = "category-container">
        <div class="row gap-2 justify-content-center">
          <% @tags_first.each do |tag| %>
            <div class="col-6 m-0 p-0 button-grid">
              <%= link_to posts_path(tag_list: tag.name, query: params[:query]), class: "button-category d-flex justify-content-around m-0" do %>
                <p class="m-0 align-self-center"> <%= tag.name.capitalize %> </p>
              <% end %>
            </div>
          <% end %>
        </div>
        <a class="button-see-more" data-bs-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">
          See more
        </a>
        <div class="collapse" id="collapseExample">
          <div class="row gap-2 justify-content-center">
            <% @tags_extra.each do |tag| %>
              <div class="col-6 m-0 p-0 button-grid">
                <%= link_to posts_path(tag_list: tag.name, query: params[:query]), class: "button-category d-flex justify-content-around m-0" do %>
                  <p class="m-0 align-self-center"> <%= tag.name.capitalize %> </p>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
      <div class="mt-4">
        <% @posts.each do |post| %>
          <div class="post-card mt-2 mb-2">
            <%= link_to post_path(post), class: "text-link" do %>
              <h1><img class="avatar" alt="avatar" src="https://kitt.lewagon.com/placeholder/users/cveneziani" /> <%= post.user.user_name %></h1>
              <h2><%= post.title %></h2>
              <p> <%= post.content %> <%#= cl_image_tag(post.photo.key) %></p>
            <% end %>
          </div>
        <% end %>
      </div>
      <%= link_to new_post_path, class: "button-post", id: "sticky-button" do %>
        <i class="fa-solid fa-plus"></i>
      <%end%>
    </div>
  </div>
</div>
