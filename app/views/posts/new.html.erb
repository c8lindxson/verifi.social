<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-sm-4">
      <%= link_to posts_path, class: "back-button" do %>
        <i class="fa-solid fa-arrow-left mt-3 mb-3"></i> Back to Community
      <% end %>
      <%= simple_form_for @post do |f| %>
        <%= f.input :title, label: false, input_html: {class: "bg-white " , placeholder: "Title" }%>
        <%= f.input :content, label: false, input_html: { class: "bg-white ", placeholder: "body text (optional)", rows: "5"} %>
        <%= f.input :tag_list, label: "Enter category", input_html: { class: "bg-white", placeholder: "nudity, BDSM, violence, gore"} %>
        <%= f.submit class: "button-login" %>
      <% end %>
    </div>
  </div>
</div>
